# 1. ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÇ‡∏ü‡∏•‡πÄ‡∏î‡∏≠‡∏£‡πå icons ‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ
if (!(Test-Path "src\assets\icons")) {
    New-Item -ItemType Directory -Path "src\assets\icons" -Force
    Write-Host "‚úÖ Created icons directory"
}

# 2. ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏ü‡∏•‡πå icon placeholder
$svgContent = @'
<?xml version="1.0" encoding="UTF-8"?>
<svg width="256" height="256" xmlns="http://www.w3.org/2000/svg">
    <rect width="256" height="256" fill="#4F46E5"/>
    <rect x="64" y="64" width="128" height="128" fill="white" stroke="#7C3AED" stroke-width="8"/>
    <text x="128" y="140" font-family="Arial" font-size="60" font-weight="bold" fill="#4F46E5" text-anchor="middle">S</text>
</svg>
'@
Set-Content -Path "src\assets\icons\app-icon.png" -Value $svgContent
Write-Host "‚úÖ Created app-icon.png"

# 3. ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏ü‡∏•‡πå icon-utils.js ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á
$iconUtilsCode = @'
// src/js/icon-utils.js
const fs = require('fs');
const path = require('path');

class IconUtils {
    static getAppIconPath() {
        try {
            const iconPath = path.join(__dirname, '..', 'assets', 'icons', 'app-icon.png');
            if (fs.existsSync(iconPath)) {
                console.log('üìÅ Found icon at:', iconPath);
                return iconPath;
            }
        } catch (error) {
            console.warn('‚ö†Ô∏è Error getting app icon path:', error.message);
        }
        return null;
    }

    static getTrayIconPath() {
        return this.getAppIconPath();
    }

    static getNotificationIconPath() {
        return this.getAppIconPath();
    }

    static async ensureIconsExist() {
        return new Promise((resolve, reject) => {
            try {
                // ‡πÉ‡∏ä‡πâ path ‡∏à‡∏≤‡∏Å root directory ‡πÇ‡∏î‡∏¢‡∏ï‡∏£‡∏á
                const iconsDir = path.join(process.cwd(), 'src', 'assets', 'icons');
                console.log('üìÅ Icons directory:', iconsDir);
                
                // ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÇ‡∏ü‡∏•‡πÄ‡∏î‡∏≠‡∏£‡πå‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ
                if (!fs.existsSync(iconsDir)) {
                    console.log('üìÅ Creating icons directory...');
                    fs.mkdirSync(iconsDir, { recursive: true });
                }
                
                const mainIcon = path.join(iconsDir, 'app-icon.png');
                console.log('üìÅ Main icon path:', mainIcon);
                
                // ‡∏™‡∏£‡πâ‡∏≤‡∏á icon ‡∏ñ‡πâ‡∏≤‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ
                if (!fs.existsSync(mainIcon)) {
                    console.log('üìù Creating placeholder icon...');
                    const svgIcon = `<?xml version="1.0" encoding="UTF-8"?>
<svg width="256" height="256" xmlns="http://www.w3.org/2000/svg">
    <rect width="256" height="256" fill="#4F46E5"/>
    <rect x="64" y="64" width="128" height="128" fill="white" stroke="#7C3AED" stroke-width="8"/>
    <text x="128" y="140" font-family="Arial" font-size="60" font-weight="bold" fill="#4F46E5" text-anchor="middle">S</text>
</svg>`;
                    
                    fs.writeFileSync(mainIcon, svgIcon);
                    console.log('‚úÖ Created icon at:', mainIcon);
                } else {
                    console.log('‚úÖ Icon already exists');
                }
                
                resolve(mainIcon);
                
            } catch (error) {
                console.error('‚ùå Error in ensureIconsExist:', error);
                // ‡πÑ‡∏°‡πà reject ‡πÅ‡∏ï‡πà resolve ‡∏î‡πâ‡∏ß‡∏¢ null ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡πÇ‡∏õ‡∏£‡πÅ‡∏Å‡∏£‡∏°‡∏ó‡∏≥‡∏á‡∏≤‡∏ô‡∏ï‡πà‡∏≠‡πÑ‡∏î‡πâ
                resolve(null);
            }
        });
    }
}

module.exports = IconUtils;
'@
Set-Content -Path "src\js\icon-utils.js" -Value $iconUtilsCode
Write-Host "‚úÖ Created icon-utils.js"